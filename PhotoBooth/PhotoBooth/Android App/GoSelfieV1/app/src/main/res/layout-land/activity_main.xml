<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".MainActivity">

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/btnCapture"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/start"
        android:layout_centerInParent="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info about GDPR - data processing see gopho2.com/data"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/goodPicturesNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15sp"
        android:layout_marginTop="15sp"
        android:text="0"
        android:textColor="#66000000"
        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/uploadStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/goodPicturesNumber"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/countDownText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="1"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="150dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/adminPanelButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginStart="15sp"/>

    <View
        android:id="@+id/flashWhiteLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:visibility="gone"/>

</RelativeLayout>